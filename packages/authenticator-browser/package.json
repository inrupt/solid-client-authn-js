{
  "name": "@solid/authenticator-browser",
  "version": "0.0.0",
  "main": "dist/index",
  "browser": "browserDist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "npm run clean-browser && npm run clean-module",
    "clean-browser": "rm -rf ./browserDist",
    "clean-module": "rm -rf ./dist",
    "build": "npm run build-browser && npm run build-module",
    "build-browser": "npm run clean-browser && webpack --config webpack.config.js --env.env=prod",
    "build-module": "npm run clean-module && tsc -p tsconfig.build.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "npm run lint && npm run unit-test && npm run browser-acceptance-test",
    "unit-test": "npm run browser-unit-test",
    "acceptance-test": "npm run browser-acceptance-test",
    "browser-dev": "webpack-dev-server --config webpack.config.js --env.env=dev",
    "browser-test": "npm run browser-unit-test && npm run browser-acceptance-test",
    "browser-unit-test": "jest --coverage --verbose",
    "browser-acceptance-test": "npm run build-browser && testcafe chrome,firefox __tests__/acceptance/ --app 'npm run browser-dev'",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@solid/authenticator-core": "^0.0.0",
    "@types/node-jose": "^1.1.1",
    "jose": "^1.19.0",
    "local-storage": "^2.0.0",
    "node-jose": "^1.1.3",
    "tsyringe": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "testcafe": "^1.7.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
