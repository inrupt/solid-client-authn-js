{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "outDir": "./dist"
  },

  "typedocOptions": {
    "out": "website/docs/api/core",
    "entryPoints": ["./src/index.ts"],
    "entryDocument": "index.md",
    "hideInPageTOC": true,
  },

  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "**/__mocks__/*"]
}
