{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "lib": ["es2018"],
    "outDir": "./dist"
  },

  "typedocOptions": {
    "out": "website/docs/api/node",
    "entryPoints": ["./src/index.ts"],
    "entryDocument": "index.rst",
    "hideInPageTOC": true,
    "plugin": ["typedoc-plugin-markdown"]
  },

  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "**/__mocks__/*"]
}
