{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "lib": ["es2018"],
    "outDir": "./dist"
  },

  "typedocOptions": {
    "out": "website/docs/api/node",
    "entryPoints": ["./src/index.ts"],
    "entryFileName": "index.rst",
    "plugin": ["typedoc-plugin-markdown"],
    // FIXME: This gets set to "markdown" somewhere.
    "theme": "default"
  },

  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "**/__mocks__/*"]
}
