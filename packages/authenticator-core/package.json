{
  "name": "@solid/authenticator-core",
  "version": "0.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "build-core": "npm run build",
    "build-core-watch": "tsc-watch --preserveWatchOutput -p tsconfig.build.json",
    "lint": "eslint src/**/*.ts && eslint __tests__/**/*.ts",
    "lint-fix": "prettier \"src/**/*.ts\" && prettier \"__tests__/**/*.ts\"",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "npm run core-unit-test",
    "core-test": "npm run test",
    "core-unit-test": "jest --coverage --verbose",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^3.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tsc-watch": "^4.0.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@types/url-parse": "^1.4.3",
    "@types/uuid": "^3.4.6",
    "ajv": "^6.10.2",
    "body-parser": "^1.19.0",
    "cross-fetch": "^3.0.4",
    "jose": "^1.19.0",
    "node-fetch": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.0.1",
    "url": "^0.11.0",
    "url-parse": "^1.4.7",
    "uuid": "^3.3.3"
  }
}
